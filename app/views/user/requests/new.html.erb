<div class="container container-fluid tab-content">
    <div class="row tab-pane show active" id="basic-content">
        <div class="new-request" >
            <div class="col">
                <div class="card shadow mb-3">
                    <div class="card-header py-3">
                        <p class="text-primary m-0 fw-bold">New Requests</p>
                    </div>
                    <div class="card-body">
                        <%= form_for [:user,@request] do |f| %>
                            <%= render partial: 'form', locals: { f: f } %>
                            <div class="mb-3 text-center">
                                <%= f.submit "Create Request",type: "submit", class: "btn btn-primary" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
